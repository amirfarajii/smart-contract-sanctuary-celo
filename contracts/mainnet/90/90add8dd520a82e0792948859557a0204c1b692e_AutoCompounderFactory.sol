contract AutoCompounder is IAutoCompounder, ERC20Permit, ReentrancyGuard, Multicall, Math {
    using SafeERC20 for IERC20;

    address public token0;
    address public token1;
    address public CELOAddress;
    address public UBEAddress;
    address public rewardToken;
    uint8 public immutable farmingPoolType;
    bool public isDeposited = false;

    IUniswapV2Router02 public uniswapV2Router;
    IStakingRewards public stakingReward;
    IAutoCompounderFactory public factory;

    constructor(
        address _factory,
        address _farmingPoolAddress,
        address _uniswapV2Router,
        uint8 _farmingPoolType,
        address _CELOAddress,
        address _UBEAddress,
        address _rewardToken
    ) ERC20("AutoCompounder LP Token", "ALP") ERC20Permit("AutoCompounder LP Token") {
        factory = IAutoCompounderFactory(_factory);
        stakingReward = IStakingRewards(_farmingPoolAddress);
        uniswapV2Router = IUniswapV2Router02(_uniswapV2Router);
        farmingPoolType = _farmingPoolType;
        CELOAddress = _CELOAddress;
        UBEAddress = _UBEAddress;
        rewardToken = _rewardToken;

        token0 = IUniswapV2Pair(address(stakingReward.stakingToken())).token0();
        token1 = IUniswapV2Pair(address(stakingReward.stakingToken())).token1();

        // approve LPToken
        IERC20(_getPair()).approve(address(stakingReward), type(uint256).max);
        // approve UBE and CELOAddress for router
        IERC20(token0).approve(address(uniswapV2Router), type(uint256).max);
        IERC20(token1).approve(address(uniswapV2Router), type(uint256).max);
        IERC20(CELOAddress).approve(address(uniswapV2Router), type(uint256).max);
        IERC20(UBEAddress).approve(address(uniswapV2Router), type(uint256).max);
    }

    /// @inheritdoc IAutoCompounder
    function deposit(uint256 _amount, address _recipient) external override {
        // get LP token from User
        IERC20(_getPair()).transferFrom(msg.sender, address(this), _amount);
        // claimReward and farm
        _claimAndFarm();

        // calculate ALP: userLP/(totalLP + reward)
        uint256 returnLiquidity = _calLiquidity(_amount);

        // send ALP token to _recipient
        _mint(_recipient, returnLiquidity);
    }

    /// @inheritdoc IAutoCompounder
    function withdraw(address _recipient, uint256 _liquidity) external override returns (uint256 amount) {
        require(_liquidity <= balanceOf(msg.sender), "AC: NEA"); // not enough amount
        require(_liquidity > 0, "AC: NP"); // not positive

        // claim reward, decrease farming amount
        _claimAndFarm();

        // calculate ratio and send to user
        uint256 ratio = bdiv(_liquidity, totalSupply());
        _burn(msg.sender, _liquidity);
        stakingReward.withdraw(bmul(ratio, stakingReward.balanceOf(address(this))));

        IERC20 pair = IERC20(_getPair());
        amount = pair.balanceOf(address(this));

        if (stakingReward.balanceOf(address(this)) <= 0) isDeposited = false;

        pair.transfer(_recipient, amount);
    }

    /// @inheritdoc IAutoCompounder
    // in a period time, backend job will call this func and trade
    function claimAndFarm() external override {
        _claimAndFarm();
    }

    function _claimAndFarm() private {
        if (isDeposited) {
            _claimReward();
            _convertReward();
        }
        _farm();
    }

    function _convertReward() private {

        _convertTokenToLP(UBEAddress);

        // UBE and CELO reward
        if (farmingPoolType == DOUBLE_REWARD) {
            _convertTokenToLP(CELOAddress);
        }
        // triple rewards
        if (farmingPoolType == TRIPLE_REWARD) {
            _convertTokenToLP(CELOAddress);
            _convertTokenToLP(rewardToken);
        }

        _addLiquidity();
    }

    /// @inheritdoc IAutoCompounder
    function stopFarm() external override {
        stakingReward.exit();
        isDeposited = false;
    }

    function _calLiquidity(uint256 _userLiquidity) private view returns (uint256) {
        if (totalSupply() == 0) {
            return _userLiquidity;
        }
        uint256 ratio = bdiv(_userLiquidity, stakingReward.balanceOf(address(this)));
        return bmul(ratio, totalSupply());
    }

    function _claimReward() private {
        stakingReward.getReward();
    }

    function _convertTokenToLP(address _token) private {
        // convert 50% to token0, 50% to token1
        uint256 totalTokenBalance = IERC20(_token).balanceOf(address(this));

        uint256 token0Amount = totalTokenBalance / 2;
        _exchange(_token, token0, token0Amount);
        _exchange(_token, token1, totalTokenBalance - token0Amount);
    }

    function _addLiquidity() private {
        uniswapV2Router.addLiquidity(
            token0,
            token1,
            IERC20(token0).balanceOf(address(this)),
            IERC20(token1).balanceOf(address(this)),
            0,
            0,
            address(this),
            _getDeadline()
        );
    }

    function _exchange(
        address _fromToken,
        address _toToken,
        uint256 _amount
    ) private {
        if (_fromToken != _toToken) {
            address[] memory path = new address[](2);
            path[0] = _fromToken;
            path[1] = _toToken;

            uniswapV2Router.swapExactTokensForTokens(_amount, 0, path, address(this), _getDeadline());
        }
    }

    function _farm() private {
        address lpAddr = _getPair();
        uint256 lpAmount = IERC20(lpAddr).balanceOf(address(this));

        if (lpAmount > 0) {
            stakingReward.stake(lpAmount);
            if (stakingReward.balanceOf(address(this)) >= 0) isDeposited = true;
        }
    }

    function _getPair() private view returns (address) {
        IUniswapV2Factory uniV2Factory = factory.uniswapV2Factory();
        return uniV2Factory.getPair(token0, token1);
    }

    function _getDeadline() internal view returns (uint256) {
        return block.timestamp + 1800;
    }
}


